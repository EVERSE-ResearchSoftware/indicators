{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Software Quality Dimension",
    "type": "object",
    "properties": {
        "@context": {
            "type": "string",
            "const": "https://w3id.org/everse/rsqd#"
        },
        "@id": {
            "type": "string",
            "format": "uri"
        },
        "@type": {
            "type": "string",
            "const": "SoftwareQualityDimension"
        },
        "name": {
            "type": "string",
            "description": "The name of the quality dimension."
        },
        "abbreviation": {
            "type": "string",
            "description": "Abbreviation or short form of the dimension name."
        },
        "description": {
            "type": "string",
            "description": "A detailed description of the quality dimension."
        },
        "identifier": {
            "type": "string",
            "format": "uri",
            "description": "A unique identifier for the quality dimension."
        },
        "keywords": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Keywords describing the quality dimension."
        },
        "author": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "uri",
                    "description": "The author or creator of the quality dimension."
                },
                {
                    "type": "object",
                    "description": "The author or creator of the quality dimension.",
                    "properties": {
                        "@type": {
                            "type": "string",
                            "format": "uri"
                        },
                        "name": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string",
                            "format": "email"
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                },
                {
                    "type": "array",
                    "description": "Multiple authors or creators of the quality dimension.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "@type": {
                                "type": "string",
                                "format": "uri"
                            },
                            "name": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string",
                                "format": "email"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                }
            ]
        },
        "created": {
            "type": "string",
            "format": "date-time",
            "description": "The date this quality dimension was created."
        },
        "version": {
            "type": "string",
            "description": "Version number of the quality dimension definition."
        },
        "contact": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "uri",
                    "description": "Contact point for further inquiries."
                },
                {
                    "type": "object",
                    "description": "Contact point for further inquiries.",
                    "properties": {
                        "@type": {
                            "type": "string",
                            "format": "uri"
                        },
                        "name": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                },
                {
                    "type": "array",
                    "description": "Multiple contact points for further inquiries.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "@type": {
                                "type": "string",
                                "format": "uri"
                            },
                            "name": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string",
                                "format": "email"
                            }
                        }
                    }
                }
            ]
        },
        "source": {
            "oneOf": [
                {
                    "type": "object",
                    "description": "Source of the quality dimension definition.",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Name of the source."

                        },
                        "url": {
                            "type": "string",
                            "description": "URL of the source."
                        }
                    },
                    "required": [
                        "name",
                        "url"
                    ]
                },
                {
                    "type": "array",
                    "description": "Multiple sources of the quality dimension definition.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of the source."
                            },
                            "url": {
                                "type": "string",
                                "description": "URL of the source."
                            }
                        },
                        "required": [
                            "name",
                            "url"
                        ]
                    }
                }
            ]
        },
        "isPartOf": {
            "type": "object",
            "description": "Indicates a dimension this dimension is part of.",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri"
                }
            }
        }
    },
    "required": [
        "@context",
        "name",
        "abbreviation",
        "description",
        "identifier",
        "source"
    ],
    "additionalProperties": false
}
